<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Jacquarda+Bastarda+9&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet" />
    <!-- Google Font -->
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap -->
    <!-- My Css -->
    <link rel="stylesheet" href="css/auth/register.css">
    <!-- My Css -->
    <title>Sistem Pakar | Daftar</title>
</head>

<body>
    <div id="app">


    
            <div class="container">
                <main class="py-2">
                    <h1 class="my-2">Daftar</h1>
                <h6 class="text-danger">
                    <%= flash_messages %>
                </h6>
                <form action="/register" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Username</label>
                        <input type="text" name="name" id="name" required minlength="5" maxlength="20"
                            v-model="slugText" placeholder="ex: Arya Adhi Prasetyo" class="form-control"
                            aria-describedby="nameHelp">
                        <div id="nameHelp" class="form-text">Kami tidak akan membagikan data Anda kepada orang
                            lain.</div>
                    </div>

                    <div class="mb-3">
                        <label for="username" class="form-label">User Id</label>
                        <input type="text" name="username" id="username" v-model="slugTize" minlength="5" maxlength="20"
                            readonly placeholder="ex: Arya_Adhi_Prasetyo" class="form-control" aria-describedby="userHelp">
                        <div id="userHelp" class="form-text">User Id nantinya digunakan untuk Anda masuk.</div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Sandi</label>
                        <input type="password" name="password" id="password" required minlength="5" maxlength="10"
                            class="form-control" aria-describedby="pwHelp">
                        <div id="pwHelp" class="form-text">Harap menggunakan sandi yang mudah Anda ingat.</div>
                    </div>

                    <div class="mb-3">
                        <label for="validator" class="form-label">Konfirmasi Sandi</label>
                        <input type="password" name="confirm" id="confirm" minlength="5" maxlength="10" required
                            class="form-control" aria-describedby="pwHelp">
                        <div id="pwHelp" class="form-text">Pastikan sandi Anda sudah sesuai.</div>
                    </div>

                    <div class="mb-3 text-center">
                        <a href="/login">Sudah memiliki akun?</a>
                    </div>
                    
                    <div class="row">
                        <button type="submit" class="btn rounded-1 btn-primary">Submit</button>
                    </div>
                </form>
            </main>
            </div>
     


    </div>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <!-- Bootstrap -->
    <!-- Vue Js -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script>
        var app = new Vue({
            el: '#app',
            data: {
                slugText: '',
            },
            computed: {
                slugTize: function () {
                    return this.slugText
                        .replace(/[^\w ]+/g, '')
                        .replace(/ +/g, '_');
                },
            }
        })
    </script>
    <!-- Vue Js -->
</body>

</html>